{
    "app-id": "dev.paullee.scraterpreter.Scrapec",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "scrapec",
    "finish-args": [
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "scrapec",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app --no-deps ."
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/scraterpreter/scrapec.git",
                    "tag": "20.06.3",
                    "commit": "e2ffcd545ab6aff22f7f067803db940dcf77c9dd"
                },
                {
                    "type": "file",
                    "path": "dev.paullee.scraterpreter.Scrapec.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "dev.paullee.scraterpreter.Scrapec.png"
                }
            ],
            "builddir": true,
            "post-install": [
                "install -Dm644 dev.paullee.scraterpreter.Scrapec.png /app/share/icons/hicolor/128x128/apps/dev.paullee.scraterpreter.Scrapec.png",
                "install -Dm644 dev.paullee.scraterpreter.Scrapec.metainfo.xml /app/share/metainfo/dev.paullee.scraterpreter.Scrapec.metainfo.xml"
            ]
        }
    ]
}

{
    "app-id": "dev.paullee.scraterpreter.Scrapec",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "scrapec",
    "finish-args": [
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "scrapec",
            "buildsystem": "simple",
